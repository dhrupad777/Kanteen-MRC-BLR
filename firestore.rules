
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is a manager
    function isManager() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager';
    }

    // Orders Collection
    // - Anyone can read the list of orders (for student and display views)
    // - Only managers can create, update, or delete orders
    match /orders/{orderId} {
      allow read: if true;
      allow write: if isManager();
    }

    // Users Collection
    // - A user can only create their own user document (on sign up)
    // - A user can only read or update their own data
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Deny delete and list for all users to protect user data
      allow delete, list: if false;
    }
  }
}
